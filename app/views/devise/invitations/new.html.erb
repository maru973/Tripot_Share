<%= turbo_frame_tag 'modal' do %>

    <dialog data-modal-target="dialog" class="p-8 rounded-lg backdrop:bg-black/80">
      <h2><%= t "devise.invitations.new.header" %></h2>
      <%= form_for(@user, as: @resource_name, url: user_invitation_path, html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>

        <% @user.class.invite_key_fields.each do |field| -%>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email %>
            <!-- plan_idも一緒に設定 -->
            <%= f.hidden_field :plan_id, value: params[:id] %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit t("devise.invitations.new.submit_button") %>
        </div>
      <% end %>
      <button autofocus data-action="modal#close" class="px-2.5 py-1 bg-blue-500 text-white text-sm rounded">Close</button>
    </dialog>

 
  
<% end %>
