<% if @planned_spot.save %>
  <%= turbo_stream.append "map", partial: "marker" %>
  <%= turbo_stream.append "spot-table" do %>
    <%= render "spot", spot: @spot %>
  <% end %>
<% end %>
<%= turbo_stream.replace "spot-form" do %>
  <%= render "form", spot: Spot.new, plan: @planned_spot.plan %>
<% end %>