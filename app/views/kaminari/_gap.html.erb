    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<div class="page gap">
  <%= content_tag(:span, t('views.pagination.truncate').html_safe, class: "join-item text-base-content btn-sm md:btn-md btn btn-disabled") %>
</div>
