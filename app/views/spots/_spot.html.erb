<tr id="spot-<%= spot.id %>">
  <td>1</td>
  <td>  
    <%= render 'spots/modal', spot: spot %>
  </td>
  <td>
    <%= link_to "#", class:"hover:brightness-75" do %>
      <div class="avatar">
          <div class="rounded-full mx-2 md:mx-auto w-7 h-7 md:w-12 md:h-12">
            <%= image_tag "sample.jpg", alt:"Avatar" %>
          </div>
      </div>
    <% end %>
  </td>
  <td>
    <%= link_to "削除", spot_path(spot), class:"btn btn-accent", data: {turbo_method: :delete, turbo_confirm: t('defaults.flash_message.delete_confirm') } %>
  </td>
  <th>
    <label>
      <input type="checkbox" class="checkbox" />
    </label>
  </th>
</tr>