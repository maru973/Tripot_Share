<tr id="spot-<%= spot.id %>" data-sortable-url="<%= rank_course_path(course) %>" data-spot-id="<%= spot.id %>">
  <td class="sortable-handle cursor-grab">
    <span class="material-symbols-outlined">
      drag_handle
    </span>
  </td>
  <td>  
    <%= render 'spots/modal', spot: spot %>
  </td>
  <td>
    <%= link_to "#", class:"hover:brightness-75" do %>
      <div class="avatar">
          <div class="rounded-full mx-2 md:mx-auto w-7 h-7 md:w-12 md:h-12">
            <%= image_tag user.avatar_url, alt:"Avatar" %>
          </div>
      </div>
    <% end %>
  </td>
  <td></td>
</tr>
