<article class="flex justify-center items-center pt-3">
  <div class="card shrink-0 max-w-xs md:w-full md:max-w-sm shadow-2xl bg-base-100">

    <div class="card-body">
      <h2 class="text-xl md:text-2xl font-bold mb-1 md:mb-2 underline text-center"><%= t('.change_your_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-control my-1">
          <%= f.label :password, t('.new_password'), class:"text-sm" %>
            <p class="text-sm"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></p>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-sm md:input-md input-bordered", placeholder: "パスワードを入力してね" %>
        </div>

        <div class="form-control my-1">
          <%= f.label :password_confirmation, t('.confirm_new_password'), class:"text-sm" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-sm md:input-md input-bordered", placeholder: "再度パスワードを入力してね" %>
        </div>

        <div class="flex justify-center mt-3">
          <%= f.submit t('.change_my_password'), class: "text-base-content btn btn-sm md:btn-md btn-accent" %>
        </div>
      <% end %>
    </div>
  </div>
</article>
